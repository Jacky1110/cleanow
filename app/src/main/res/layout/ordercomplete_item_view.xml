<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_OrderDetItview_05"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_OrderDetItview_05"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_OrderDetItviewMerchPrice_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="TextView"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_OrderDetItviewMerch_05"
            app:layout_constraintTop_toBottomOf="@+id/tv_OrderDetItviewMerch_05"
            tools:text="100" />

        <ImageView
            android:id="@+id/iv_OrderDetItviewMerch_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_OrderDetItviewSeller_05"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_OrderDetItviewSeller_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="賣家姓名" />

        <TextView
            android:id="@+id/tv_OrderDetItviewNumber_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/iv_OrderDetItviewMerch_05"
            app:layout_constraintTop_toBottomOf="@+id/tv_OrderDetItviewMerchPrice_05"
            tools:text="x1" />

        <TextView
            android:id="@+id/tv_OrderDetItviewMerch_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/iv_OrderDetItviewMerch_05"
            app:layout_constraintTop_toBottomOf="@+id/tv_OrderDetItviewSeller_05"
            tools:text="商品名稱" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>