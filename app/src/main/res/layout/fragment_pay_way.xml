<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="market.PayWayFragment"
    android:id="@+id/cl_paywayFm_05" >

    <Button
        android:id="@+id/bt_paywayFm_05"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:text="@string/bottonConfirm"
        android:textSize="25sp"
        app:backgroundTint="@color/maincolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="確認" />

    <RadioButton
        android:id="@+id/rb_paywayFM_05_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="@color/maincolor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cardpayFm_05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cardpayFm_05" />

    <TextView
        android:id="@+id/tv_paywayFm_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/textViewPayWay"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="付款方式" />

    <TextView
        android:id="@+id/tv_cardpayFm_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/textViewCardPay"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/iv_cardpayFM_05"
        app:layout_constraintTop_toBottomOf="@+id/tv_paywayFm_05"
        tools:text="信用卡支付" />

    <ImageView
        android:id="@+id/iv_cardpayFM_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/icon_creditcard_05"
        android:tint="@color/maincolor"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cardpayFm_05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_cardpayFm_05"
        app:layout_constraintVertical_bias="0.444" />
</androidx.constraintlayout.widget.ConstraintLayout>