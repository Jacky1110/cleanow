<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_addcard_05"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_addcard_05"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RadioButton
            android:id="@+id/rb_addcard_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="25dp" />

        <ImageView
            android:id="@+id/iv_addcard_05"
            android:layout_width="63dp"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:tint="@color/maincolor"
            app:layout_constraintBottom_toBottomOf="@+id/rb_addcard_05"
            app:layout_constraintStart_toEndOf="@+id/rb_addcard_05"
            app:srcCompat="@drawable/icon_creditcard_05" />

        <TextView
            android:id="@+id/tv_addcard1_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/iv_addcard_05"
            tools:layout_editor_absoluteX="137dp"
            tools:text="中國信託" />

        <TextView
            android:id="@+id/tv_addcard2_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_addcard_05"
            tools:layout_editor_absoluteX="137dp"
            tools:text="……1234" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>