<!-- 選項容器layout檔 -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="12dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/lightclearn"
    app:cardCornerRadius="10dp"
    app:cardElevation="16dp"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_homenotice_ordertitle_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="預約訂單編號"
            android:textColor="@color/notselect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_homenotice_ordernumber_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sfsdfrwageagreagw"
            android:textColor="@color/notselect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_homenotice_date_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2021.09.23"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_homenotice_ordernumber_11" />

        <TextView
            android:id="@+id/tv_homenotice_name_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="預約  : 王大明"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_homenotice_ordertitle_11" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>